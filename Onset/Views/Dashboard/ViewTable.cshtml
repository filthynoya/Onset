@model Onset.Models.DashboardModel.ViewTable

@{
    Layout = null;
    bool is_manager = Model.USERTYPE == "Manager";
    string pic = "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp";

    if (Model.PROFILEPIC != null)
    {
        pic = Model.PROFILEPIC;
    }

    int user_count_man = Model.MANS.Count;

    if (user_count_man > 3)
    {
        user_count_man = 3;
    }

    int user_count_emp = Model.EMPS.Count;

    if (user_count_emp > 2)
    {
        user_count_emp = 2;
    }

    int task_count = Model.TASKS.Count;

    if (task_count > 5)
    {
        task_count = 5;
    }

    int event_count = Model.EVENTS.Count;

    if (event_count > 5)
    {
        event_count = 5;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Table</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
          rel="stylesheet" />
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
          rel="stylesheet" />
    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
          rel="stylesheet" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <link href="/Content/style.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner"
             class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary"
                 style="width: 3rem; height: 3rem"
                 role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3 bg-light">
            <nav class="navbar bg-light">
                <a href="/Dashboard/Index/" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">
                        <i class="fa fa-user-edit me-2"></i>OnSet
                    </h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle"
                             src="@pic"
                             alt="avatar 1"
                             style="width: 40px; height: 40px" />
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">@Model.NAME</h6>
                        <span>@Model.USERTYPE</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="/Dashboard/Index" class="nav-item nav-link"><i class="fa fa-laptop me-2"></i>Dashboard</a>
                    <a href="/Dashboard/ViewTable" class="nav-item nav-link active"><i class="fa fa-table me-2"></i>Tables</a>
                    <a href="/Dashboard/Rooms" class="nav-item nav-link"><i class="fa fa-bell me-2"></i>Message</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light sticky-top px-4 py-0">
                <a href="/Dashboard/Index/" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#"
                           class="nav-link dropdown-toggle"
                           data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Notification</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a class="notification-a">
                                <h6 class="fw-normal mb-0">Task</h6>
                                @{
                                    for (int i = 0; i < Model.DASHINFO.TASKS.Count && i < 2; i++)
                                    {
                                        <small>@Model.DASHINFO.TASKS[i].TASK_NAME</small><br />
                                        <small style="font-size:12px">@Model.DASHINFO.TASKS[i].TASK_CATEGORY</small><br />
                                    }
                                }
                            </a>
                            <hr class="dropdown-divider" />
                            <a class="notification-a">
                                <h6 class="fw-normal mb-0">Event</h6>
                                @{
                                    for (int i = 0; i < Model.DASHINFO.EVENTS.Count && i < 2; i++)
                                    {
                                        <small>@Model.DASHINFO.EVENTS[i].EVENT_NAME</small><br />
                                        <small style="font-size:12px">@Model.DASHINFO.EVENTS[i].EVENT_CATEGORY</small><br />
                                    }
                                }
                            </a>

                            <hr class="dropdown-divider" />
                            <a href="/Dashboard/Notification/" class="dropdown-item text-center">See all notifications</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#"
                           class="nav-link dropdown-toggle"
                           data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2"
                                 src="@pic"
                                 alt="avatar 1"
                                 style="width: 40px; height: 40px" />
                            <span class="d-none d-lg-inline-flex">@Model.NAME</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            @Html.ActionLink("My Profile", "ViewProfile", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Log Out", "Logout", "Auth", null, new { @class = "dropdown-item" })
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">

                    <div class="col-12">
                        <div class="bg-table rounded h-100 p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">User Table</h6>
                                <a href="/Dashboard/ViewUser">Show All</a>
                            </div>
                            <div class="table-responsive ">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">First Name</th>
                                            <th scope="col">Last Name</th>
                                            <th scope="col">Designation</th>
                                            <th scope="col">Role</th>
                                            <th scope="col">Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @for (int i = 1; i <= user_count_man; i++)
                                        {
                                            <tr>
                                                <th scope="row">@i</th>
                                                <td>@Model.MANS[i - 1].MANAGER_FIRSTNAME</td>
                                                <td>@Model.MANS[i - 1].MANAGER_LASTNAME</td>
                                                <td>@Model.MANS[i - 1].MANAGER_DESIGNATION</td>
                                                <td>Manager</td>
                                                <td>@Model.MANS[i - 1].MANAGER_EMAIL</td>
                                            </tr>
                                        }

                                        @for (int i = 1; i <= user_count_emp; i++)
                                        {
                                            <tr>
                                                @{var newi = i + user_count_man;}<th scope="row">@newi</th>
                                                <td>@Model.EMPS[i - 1].EMPLOYEE_FIRSTNAME</td>
                                                <td>@Model.EMPS[i - 1].EMPLOYEE_LASTNAME</td>
                                                <td>@Model.EMPS[i - 1].EMPLOYEE_DESIGNATION</td>
                                                <td>Employee</td>
                                                <td>@Model.EMPS[i - 1].EMPLOYEE_EMAIL</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="bg-table rounded h-100 p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Event List</h6>
                                <a href="/Dashboard/ViewEventAll">Show All</a>
                            </div>
                            <div class="table-responsive ">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">Event Name</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Deadline</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < event_count; i++)
                                        {
                                        <tr>
                                            <td scope="col">@Model.EVENTS[i].EVENT_NAME</td>
                                            <td scope="col">@Model.EVENTS[i].EVENT_CATEGORY</td>
                                            <td scope="col">@Model.EVENTS[i].EVENT_DEADLINE</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="bg-table rounded h-100 p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Tasks</h6>
                                <a href="/Dashboard/ViewTaskAll">Show All</a>
                            </div>
                            <div class="table-responsive ">
                                <table class="table text-start align-middle table-hover mb-0">
                                    <thead>
                                        <tr class="text-white">
                                            <th scope="col">Team Member</th>
                                            <th scope="col">Task</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Progress</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 1; i <= task_count; i++)
                                        {
                                        <tr class="fw-normal">
                                            <th>
                                                <span class="ms-2">@Model.TASKUSER[i - 1]</span>
                                            </th>
                                            <td class="align-middle">@Model.TASKS[i - 1].TASK_NAME</td>
                                            <td class="align-middle">@Model.TASKS[i - 1].TASK_CATEGORY</td>
                                            <td class="align-middle text-light">
                                                @{
                                                    if (Model.PERCENT[i - 1].ToString().Length == 1)
                                                    {
                                                        //&nbsp
                                                        <div class="float-start me-3">
                                                            @Model.PERCENT[i - 1] &nbsp
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="float-start me-3">
                                                            @Model.PERCENT[i - 1]
                                                        </div>
                                                    }
                                                }
                                                <div class="mt-1">
                                                    <div class="progress" style="height: 15px">
                                                        <div class="progress-bar"
                                                             role="progressbar"
                                                             style="width: @Model.PERCENT[i-1]%"
                                                             aria-valuenow="@Model.PERCENT[i-1]"
                                                             aria-valuemin="0"
                                                             aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->
            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-table rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="/Dashboard/Index/">OnSet</a>, All Right Reserved.
                        </div>
                        <!--<div class="col-12 col-sm-6 text-center text-sm-end">
                <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                        <!--Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                <br />Distributed By:
                <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
              </div>-->
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Template Javascript -->
    <script src="/Scripts/main.js"></script>
</body>
</html>